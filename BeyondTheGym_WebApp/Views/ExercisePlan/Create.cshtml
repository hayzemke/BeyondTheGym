@using BTG.Models.ExercisePlanModels
@model PlanCreate

@{
    ViewData["Title"] = "Create";
}

<h1>Create New Plan</h1>
@*<h4>Add Exercise</h4>*@
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <select asp-for="ExerciseID" asp-items="@Model.ExerciseList" class="form-select">
                    <option selected disabled>--Select Exercise--</option>
                </select>
                <span asp-validation-for="ExerciseID" class="text-danger"></span>
            </div>

            <hr />
            <div class="form-group">
                <select asp-for="ClientID" asp-items="@Model.ClientList" class="form-select">
                    <option selected disabled>--Select Client--</option>
                </select>
                <span asp-validation-for="ClientID" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<hr />
<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}